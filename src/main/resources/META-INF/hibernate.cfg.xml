<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/Apuesta</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.pool_size">10</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <property name="hibernate.show_sql">true</property>
        <!--<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>-->

        <mapping resource="com.mycompany.apuestatodook.Apuesta" />
        <mapping resource="com.mycompany.apuestatodook.Partido" />
        <mapping resource="com.mycompany.apuestatodook.Persona" />
        <mapping resource="com.mycompany.apuestatodook.Resultado" />
        <mapping resource="com.mycompany.apuestatodook.Usuario" />
    </session-factory>
</hibernate-configuration>